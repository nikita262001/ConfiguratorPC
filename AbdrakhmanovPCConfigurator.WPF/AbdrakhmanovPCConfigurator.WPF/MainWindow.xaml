<Window x:Class="AbdrakhmanovPCConfigurator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbdrakhmanovPCConfigurator.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">

    <Grid Background="#132535">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock x:Name="txtTitle" FontSize="25" Foreground="#31FF21" HorizontalAlignment="Left" Margin="10 0 0 0"/>
        </Grid>
        <Frame Grid.Row="2" NavigationUIVisibility="Hidden" x:Name="frame"/>
    </Grid>
</Window>
