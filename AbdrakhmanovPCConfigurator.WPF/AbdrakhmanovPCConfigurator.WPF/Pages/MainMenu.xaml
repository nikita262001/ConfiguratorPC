<Page x:Class="AbdrakhmanovPCConfigurator.WPF.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbdrakhmanovPCConfigurator.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0 10 0 10">
            <Button Height="30" Margin="5" Content="Готовые ПК" Width="175" Click="FullComponents_Click"/>
            <Button x:Name="buttonComponents" Height="30" Margin="5" Content="Компоненты" Width="175" Click="Components_Click"/>
            <Button Height="30" Margin="5" Content="Сборка ПК" Width="175" Click="ConfiguratorPC_Click"/>
            <Button Height="30" Margin="5" Content="Выход" Width="175" Click="Exit_Click"/>
        </StackPanel>
        <Frame Grid.Column="1" NavigationUIVisibility="Hidden" x:Name="frameMenu"/>
    </Grid>
</Page>
